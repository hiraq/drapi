{
    "name": "hiraq/drapi",
    "description": "A framework to create API services",
    "keywords": ["api"],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.zendframework.com/"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "ext-mongo": "*",
        "zendframework/zend-json": "2.*",        
        "zendframework/zend-uri": "2.*",
        "zendframework/zend-http": "2.*",
        "monolog/monolog": ">=1.5.*"
    }, 
    "require-dev": {
        "phpunit/phpunit": ">=3.7.*"
    },   
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Hiraq",
            "email": "hrxwan@gmail.com",
            "role": "lead"
        }
    ],
    "autoload": {
        "psr-0": {"Drapi\\": "src/"},
        "files": ["src/drapi-commons.php"]
    },
    "minimum-stability": "stable"
}